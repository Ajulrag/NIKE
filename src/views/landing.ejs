body {
  background: linear-gradient(to bottom, #2d2b2b, #222222);
  background-repeat: no-repeat;
  height: 100vh;
  width: 100vw;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.navbar-light .navbar-nav .active>.nav-link {
  color: rgb(255, 255, 255) !important;
}

#search {
  width: 252px;
  height: 35px;
  background-image: linear-gradient(to right, #353333, #504a52);
}

.img-wrapper img {
  height: auto;
  width: 80%;
  transform: rotate(-45deg);
}

.logo-svg {
  max-width: 100%;
  height: auto;
}

.nike-path {
  animation: reveal 2s forwards;
  fill: #1b161c;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
}

@media (min-width: 768px) {
  .nike-path {
    width: 50vw;
    height: auto;
  }
}

@media (max-width: 769px) {
  .nike-path {
    width: 100%;
    height: auto;
    max-width: none;
    max-height: none;
  }
}

.smoke-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

@keyframes reveal {
  0% {
    opacity: 0;
    clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
  }
  50% {
    opacity: 1;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  }
  100% {
    opacity: 1;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
  }
}

.nike-text-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  z-index: -1;
}

.nike-text {
  font-size: 20vw; /* Adjust the font size using viewport width */
  font-weight: bold;
  animation: slideIn.5s ease-out forwards;
  opacity: 0;
  animation-delay: 1.5s;
  color: transparent;
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  background-image: linear-gradient(to right, #393838, #1b161c);
  text-align: center;
}

@media (max-width: 768px) {
  /* Adjust font size for smaller screens */
  .nike-text {
    font-size: 40vw;
  }
}

@media (max-width: 320px) {
  .nike-text-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .nike-text {
    font-size: 40vw;
    font-weight: bold;
    animation: slideIn 1.5s ease-out forwards;
    opacity: 0;
    animation-delay: 2s;
    color: transparent;
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
    background-image: linear-gradient(to right, #393838, #1b161c);
    text-align: center;
  }
}

@keyframes slideIn {
  0% {
    transform: translateX(-100%);
  }
  50% {
    opacity: 1;
    transform: translateX(-50%);
  }
  100% {
    opacity: 1;
    transform: translateX(0%);
  }
}

@media (max-width: 768px) {
